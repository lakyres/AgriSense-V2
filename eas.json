{
  "cli": {
    "version": ">= 16.1.0",
    "appVersionSource": "remote"
  },
  "hooks": {
    "preinstall": "npm install --legacy-peer-deps"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
